<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="6dip">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
		    android:orientation="horizontal"
		    android:layout_weight="5"
		    android:background="@drawable/darkrose31000">
		    
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	        android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
		    	android:orientation="vertical"
		    	android:layout_weight="2"
            	android:id="@+id/first2">
            	
            	<ImageView
			        android:id="@+id/icon"
			    	android:orientation="horizontal"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
					android:padding="5dip"
					android:layout_gravity="center_vertical"
					android:paddingTop="30dip"
			        android:src="@drawable/abc" />
            		
            	
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:layout_weight="3"
	            android:id="@+id/first3">
			    <TextView
					android:id="@+id/left_wrap"
			    	android:orientation="horizontal"
					android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="right"
			        android:paddingTop="110dip"
			        android:layout_marginBottom="5dip"
		    		android:paddingRight="3dp"
					android:textSize="16sp"/>
			    <TextView
					android:id="@+id/right_fill"
			    	android:orientation="horizontal"
					android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="right"
		    		android:paddingRight="3dp"
			        android:layout_marginBottom="3dip"
				    android:layout_below="@id/left_wrap"
					android:textSize="10sp"/>
		    	<TextView
					android:id="@+id/right_fill2"
			    	android:orientation="horizontal"
					android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="right"
				    android:paddingRight="3dp"
				    android:layout_below="@id/right_fill"
					android:textSize="10sp"/>
		</LinearLayout>
		
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
		    android:orientation="horizontal"
		    android:layout_weight="7"
            android:id="@+id/first4"
            >
        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/list"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#020001"
		    android:padding="10dp"
		    android:textSize="16sp" />
	</LinearLayout>
	
</LinearLayout>